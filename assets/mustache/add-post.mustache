<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" type="button" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
            <h1 class="modal-title" id="modal-title">New Post</h1>
        </div>
        <div class="modal-body">
            <form class="new-post-form" id="new-post-form">
                <div class="form-group">
                    <label>Image URL<span>*</span></label>
                    <input type="text" placeholder="Image URL" name="imageURL" id="imageURL" class="form-control">
                </div>
                <div class="form-group">
                    <label>Caption<span>*</span></label>
                    <textarea class="form-control" placeholder="Write something....!" name="caption" id="caption"></textarea>
                </div>
                <div class="save-post">
                    <button type="submit" id="save-post-btn" class="btn">Add Post</button>
                </div>
            </form>
        </div>
    </div>
</div>